if (document.domain == 'www.cs.colostate.edu') 
{
		var link = 'http://www.cs.colostate.edu/~park/p3/api_test.php';
}
else 
{
		var link = 'api_test.php';
}


var http = false;
if(navigator.appName == "Microsoft Internet Explorer") 
{
	http = new ActiveXObject("Microsoft.XMLHTTP");
} 
else
{
	http = new XMLHttpRequest();
} 
			
function user_name(id) 
{
	http.abort();
	http.open("GET", link + '?uid=' + id, true);
	http.onreadystatechange = function() {
		if (http.readyState == 4) {
			document.getElementById('ret_uid').innerHTML = http.responseText;
		}
	}
	http.send(null);
}

function users()
{
	http.abort();
	http.open("GET", link + '?users='+ 1, true);
	http.onreadystatechange = function() {
		if (http.readyState == 4) {
			document.getElementById('ret_users').innerHTML = http.responseText;
		}
	}
	http.send(null);
}
